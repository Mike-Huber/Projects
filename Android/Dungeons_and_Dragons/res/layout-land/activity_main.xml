<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@mipmap/background"
    tools:context="just_4_guys.groupproj.MainActivity">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <Button
            android:id="@+id/button_races"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:text="@string/string_races"

            android:hapticFeedbackEnabled="true"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/button_classes"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:text="@string/string_classes"

            android:layout_below="@+id/button_races"
            android:hapticFeedbackEnabled="true"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/button_equipment"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:text="@string/string_equipment"

            android:layout_below="@+id/button_classes"
            android:hapticFeedbackEnabled="true"
            android:textStyle="bold"/>
        <!--android:layout_centerHorizontal="true"-->
        <Button
            android:id="@+id/button_weapons"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:text="@string/string_weapons"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/button_equipment"
            android:hapticFeedbackEnabled="true"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/button_armor"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:text="@string/string_armor"

            android:layout_toRightOf="@id/button_races"
            android:hapticFeedbackEnabled="true"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/button_dice"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:text="@string/string_dice"

            android:layout_toRightOf="@id/button_races"
            android:layout_below="@id/button_armor"
            android:hapticFeedbackEnabled="true"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/button_character_sheet"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:text="@string/string_character_sheet"

            android:layout_toRightOf="@id/button_races"
            android:layout_below="@id/button_dice"
            android:hapticFeedbackEnabled="true"
            android:textStyle="bold"/>

    </RelativeLayout>

</RelativeLayout>